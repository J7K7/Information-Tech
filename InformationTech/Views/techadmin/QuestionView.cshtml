@model IEnumerable<InformationTech.Models.Question>
@{
    ViewBag.Title = "Question View";
    Layout = "~/Views/_LayoutPageAdmin.cshtml";
}





<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Subject Question View</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("DashBoard","techadmin")">Home</a></li>
                <li class="breadcrumb-item">Exam</li>
                <li class="breadcrumb-item active">Question View</li>
            </ol>
        </div>
       
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <a href="@Url.Action("SubjectQuestionView","techadmin")" class="btn waves-effect waves-light btn-danger" )><i class="fa fa-arrow-circle-left "> Back</i></a>
                        </div>
                        <div class="col-3">
                            <a href="@Url.Action("QuestionAdd","techadmin", new { id = ViewBag.id})" class="btn waves-effect waves-light btn-success fa " style="margin-left:70px;font-size:larger"> Add Question <i class="fa fa-arrow-circle-right  "></i></a>
                        </div>
                    
                            <div class="table-responsive m-t-40">
                                <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">

                                    <thead>
                                        <tr>
                                            <th>Sr.No.</th>
                                            <th>Date And Time</th>
                                            <th>Question</th>
                                            <th style="display:none"> Subject ID</th>
                                            <th> Edit </th>
                                            <th> Delete </th>
                                            <th> Objective View</th>
                                            <th> Answer View</th>

                                        </tr>
                                    </thead>

                                    @{
                                        int sno = 0;
                                    }
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@{ sno++; } @sno  </td>
                                                <td> @Html.DisplayFor(modelItem => item.DateAndTime)</td>
                                                <td> @Html.Raw(item.question)</td>
                                                <td style="display:none"> @Html.DisplayFor(modelItem => item.subject_id)</td>
                                                <td> @Html.ActionLink(" ", "QuestionUpdate", new { id = item.question_id }, new { @class = "fa fa-pencil fa-2x", title = "Edit" }) </td>
                                                <td> @Html.ActionLink(" ", "QuestionDelete", new { ID = item.question_id }, new { onclick = "return confirm('Do you really want to delete this record?')", @class = "fa fa-trash fa-2x", title = "Delete" })</td>
                                                <td> @Html.ActionLink(" ", "ObjectiveView", new { ID = item.question_id }, new { @class = "fa fa-bullseye fa-2x", title = "View Objective" })</td>
                                                <td> @Html.ActionLink(" ", "AnsView", new { ID = item.question_id }, new { @class = "fa fa-reply fa-2x", title = "Add Ans" })</td>





                                            </tr>
                                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
    </div>
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
</div>



<script src="~/Content/assets/plugins/datatables/jquery.dataTables.min.js"></script>
<!-- start - This is for export functionality only -->
<script src="http://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
<script src="http://cdn.datatables.net/buttons/1.2.2/js/buttons.flash.min.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
<script src="http://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
<script src="http://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
<script src="http://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
<script src="http://cdn.datatables.net/buttons/1.2.2/js/buttons.print.min.js"></script>
