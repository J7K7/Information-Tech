@model InformationTech.Models.Class_detail

@{
    ViewBag.Title = "Class Add";
    Layout = "~/Views/_LayoutPageAdmin.cshtml";
}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Add Class\Semester</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("DashBoard","techadmin")">Home</a></li>
                <li class="breadcrumb-item">Class\Sem</li>
                <li class="breadcrumb-item active">Add Class\Sem</li>
            </ol>
        </div>

    </div>

    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <!-- Row -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    @using (Html.BeginForm("ClassAdd", "techadmin", FormMethod.Post, new { enctype = "multipart/form-data", style = "width:400px;" }))
    {

        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.DateAndTime, new { @Value = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss") })




        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header btn-primary">

                        <h4 class="m-b-0 text-white">Add Class\Sem Here</h4>
                    </div>
                    <div class="card-body">
                        <div class="form p-t-20">


                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">


                                        <select name="taskOption" class="form-control">
                                            <option value="none">Select Stream</option>

                                            @for (int i = 0; i < ViewBag.dt.Rows.Count; i++)
                                            {
                                                <option value="@ViewBag.dt.Rows[i]["stream_id"].ToString()">@ViewBag.dt.Rows[i]["stream"].ToString()</option>
                                            }


                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputuname">Class Name</label>
                                        <div class="input-group">
                                            <div class="input-group-addon"><i class="ti-layers-alt"></i></div>

                                            @Html.TextBoxFor(model =>model.class_name , new { maxlength = "49", required = "required", placeholder = "Enter Class Or Sem Name", id = "exampleInputuname", title = "Enter Class Name", @class = "form-control" })

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <button class="btn waves-effect waves-light btn-success  text-uppercase " type="submit" value="class" name="submit">Add Class</button>

                       
                        &nbsp;&nbsp;
                        <a href="@Url.Action("ClassView","techadmin")", class="btn waves-effect waves-light btn-danger">Cancel</a>
                    </div>
                </div>
            </div>
        </div>

    }

</div>



