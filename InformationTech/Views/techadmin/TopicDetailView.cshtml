@model IEnumerable<InformationTech.Models.TopicDetail>
@{
    ViewBag.Title = "Topic Detail View";
    Layout = "~/Views/_LayoutPageAdmin.cshtml";
}





<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Topic Detail View</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("DashBoard","techadmin")">Home</a></li>
                <li class="breadcrumb-item">Topic Detail</li>
                <li class="breadcrumb-item active">Topic Detail View</li>
            </ol>
        </div>
       
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <a href="@Url.Action("TopicView","techadmin",new { id = ViewBag.id2})" class="btn waves-effect waves-light btn-danger" )><i class="fa fa-arrow-circle-left "> Back</i></a>
                        </div>
                        <div class="col-3">
                            <a href="@Url.Action("TopicDetailAdd","techadmin", new { id = ViewBag.id})" class="btn waves-effect waves-light btn-success fa " style="margin-left:50px;font-size:larger">Add Topic Detail <i class="fa fa-arrow-circle-right  "></i></a>
                        </div>
                    </div>

                    <div class="table-responsive m-t-40">
                        <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%" style="font-size: small;">

                            <thead>
                                <tr>
                                    <th>Sr.No.</th>
                                    <th>Date And Time</th>
                                    <th>Topic Detail</th>
                                    <th style="display:none;">Topic Id</th>

                                    <th>Edit</th>
                                    <th>Delete</th>
                                    <th>PDF </th>
                                    <th>Video </th>
                                    <th>Source code</th>

                                </tr>
                            </thead>

                            
                            @{
                                int sno = 0;
                            }
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@{ sno++; } @sno  </td>
                                        <td> @Html.DisplayFor(modelItem => item.dateandtime)</td>
                                        <td> @Html.Raw(item.topic_detail_tittle)</td>
                                        <td style="display:none;"> @Html.DisplayFor(modelItem => item.topic_id)</td>

                                        <td> @Html.ActionLink(" ", "TopicDetailUpdate", new { id = item.topic_detail_id }, new { @class = "fa fa-pencil fa-2x", title = "Edit" }) </td>
                                        <td> @Html.ActionLink(" ", "TopicDetailDelete", new { ID = item.topic_detail_id }, new { onclick = "return confirm('Do you really want to delete this record?')", @class = "fa fa-trash fa-2x", title = "Delete" })</td>
                                        <td> @Html.ActionLink(" ", "TopicPdfView", new { ID = item.topic_id }, new { @class = "fa fa-file-pdf-o fa-2x", title = "Topic PDF View" })</td>
                                        <td> @Html.ActionLink(" ", "TopicVideoView", new { ID = item.topic_id }, new { @class = "fa fa-youtube-play fa-2x", title = "Topic Video View" })</td>
                                        <td> @Html.ActionLink(" ", "TopicSourceCodeView", new { ID = item.topic_id }, new { @class = " fa fad fa-code fa-2x", title = "Topic Source Code View" })</td>

                                       
                                    </tr>
                                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
</div>



<script src="~/Content/assets/plugins/datatables/jquery.dataTables.min.js"></script>
<!-- start - This is for export functionality only -->
<script src="http://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
<script src="http://cdn.datatables.net/buttons/1.2.2/js/buttons.flash.min.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
<script src="http://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
<script src="http://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
<script src="http://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
<script src="http://cdn.datatables.net/buttons/1.2.2/js/buttons.print.min.js"></script>
<!-- end - This is for export functionality only -->
<script>

    $('#example23').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    });
</script>
