@model IEnumerable<InformationTech.Models.topicsourcecode>
@{
    ViewBag.Title = "Topic Source Code View";
    Layout = "~/Views/_LayoutPageAdmin.cshtml";
}





<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Topic Source Code View</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("DashBoard","techadmin")">Home</a></li>
                <li class="breadcrumb-item">Topic</li>
                <li class="breadcrumb-item active">Topic Source Code View</li>
            </ol>
        </div>
       
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <div class="row">
                        <div class="col-9">
                            <a href="@Url.Action("TopicDetailView","techadmin",new { id = ViewBag.id})" class="btn waves-effect waves-light btn-danger" )><i class="fa fa-arrow-circle-left "> Back</i></a>
                        </div>
                        <div class="col-3">
                            <a href="@Url.Action("TopicSourceCodeAdd","techadmin", new { id = ViewBag.id})" class="btn waves-effect waves-light btn-success fa " style="font-size:larger">Add Topic Source Code <i class="fa fa-arrow-circle-right  "></i></a>
                        </div>
                    </div>
                    
                    <div class="table-responsive m-t-40">
                        <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">

                            <thead>
                                <tr>
                                    <th>Sr.No.</th>
                                    <th>Date And Time</th>
                                    <th>Topic Source Code</th>
                                    <th style="display:none;">Topic Id</th>                                
                                    <th> Update</th>
									<th> Delete</th>


                                </tr>
                            </thead>

                            @{
                                int sno = 0;
                            }
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@{ sno++; } @sno  </td>
                                        <td> @Html.DisplayFor(modelItem => item.DateAndTime)</td>
                                        @*<td> @Html.Raw(@Html.DisplayFor(modelItem => item.topic_source_code))</td>*@
                                        <td> @Html.Raw(item.topic_source_code)</td>
                                        <td style="display:none;"> @Html.DisplayFor(modelItem => item.topic_id)</td>
                                        
                                        <td> @Html.ActionLink(" ", "TopicSourceCodeUpdate", new { ID = item.topic_source_code_id }, new {  @class = "fa fa-pencil fa-2x", title = "Update" })</td>
										<td> @Html.ActionLink(" ", "TopicSourceCodeDelete", new { ID = item.topic_source_code_id }, new { onclick = "return confirm('Do you really want to delete this record?')", @class = "fa fa-trash fa-2x", title = "Delete" })</td>
                                       

                                    </tr>
                                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
</div>



<script src="~/Content/assets/plugins/datatables/jquery.dataTables.min.js"></script>
