
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/_LayoutPageAdmin.cshtml";
}

<div class="container-fluid r-aside">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Dashboard </h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Dashboard </li>
            </ol>
        </div>
        @*<div class="">
            <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
        </div>*@
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex no-block">
                        <div class="m-r-20 align-self-center"><span class="lstick m-r-20"></span><a href="@Url.Action("StreamView","techadmin")" aria-expanded="false"><img src="~/Content/assets/images/icon/income.png" alt="Stream" /></a></div>
                        <div class="align-self-center">
                            <h6 class="text-muted m-t-10 m-b-0">Total Stream</h6>
                            <h2 class="m-t-0">@ViewBag.totalstreamview</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex no-block">
                        <div class="m-r-20 align-self-center"><span class="lstick m-r-20"></span><a href="@Url.Action("ClassView","techadmin")" aria-expanded="false"><img src="~/Content/assets/images/icon/assets.png" alt="Class/Sem" /></a></div>
                        <div class="align-self-center">
                            <h6 class="text-muted m-t-10 m-b-0">Total Class\Sem</h6>
                            <h2 class="m-t-0">@ViewBag.totalclassview</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex no-block">
                        <div class="m-r-20 align-self-center"><span class="lstick m-r-20"></span><img src="~/Content/assets/images/icon/expense.png" alt="Subject" /></div>
                        <div class="align-self-center">
                            <h6 class="text-muted m-t-10 m-b-0">Total Subject</h6>
                            <h2 class="m-t-0">@ViewBag.totalsubjectview</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    

       
    </div>
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex no-block">
                        <div class="m-r-20 align-self-center"><span class="lstick m-r-20"></span><a href="@Url.Action("Member","techadmin")" aria-expanded="false"><img src="~/Content/icon images/money (1).png" alt="Income" style="height:50px;width:50px;" /></a></div>
                        <div class="align-self-center">
                            <h6 class="text-muted m-t-10 m-b-0">Total Income</h6>
                            <h2 class="m-t-0">@ViewBag.totalpriceview</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex no-block">
                        <div class="m-r-20 align-self-center"><span class="lstick m-r-20"></span><img src="~/Content/icon images/folder (1).png" alt="Paper" style="height:50px;width:50px;" /></div>
                        <div class="align-self-center">
                            <h6 class="text-muted m-t-10 m-b-0">Total Old Paper</h6>
                            <h2 class="m-t-0">@ViewBag.totalpaperview</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex no-block">
                        <div class="m-r-20 align-self-center"><span class="lstick m-r-20"></span><a href="@Url.Action("contact","techadmin")" aria-expanded="false"><img src="~/Content/icon images/eye (2).png" alt="Enquiry" style="height:50px;width:50px;" /></a></div>
                        <div class="align-self-center">
                            <h6 class="text-muted m-t-10 m-b-0">Today Enquiry</h6>
                            <h2 class="m-t-0">@ViewBag.totalcontactview</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
