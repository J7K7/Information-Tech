
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutClientPage.cshtml";
}

<style>
    h4 {
        line-height: 1.4;
        font-size: 26px;
    }

    h1, h2, h3, h4, h5 {
        font-family: Merriweather;
        color: #333333;
        clear: both;
        font-weight: 400;
        margin: 17px,0,12px;
    }
</style>

<div class="ht__bradcaump__area" data--black__overlay="4" style="background: rgba(0, 0, 0, 0) url(/Content/ClientCss/images/bg/4.jpg) no-repeat scroll center center / cover ;">
    <div class="ht__bradcaump__wrap">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="bradcaump__inner text-center">
                        <h2 class="bradcaump-title">Profile</h2>
                        <nav class="bradcaump-inner">
                            <a class="breadcrumb-item" href="index.html">Home</a>
                            <span class="brd-separetor"><i class="icon ion-ios-arrow-right"></i></span>
                            <span class="breadcrumb-item active">Profile</span>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Start Single List -->
@using (Html.BeginForm("Index", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-4">
            <img src="@ViewBag.image" style="height:300px;width:100%;border:1px solid #cfcfcf;padding:4px; float:left; margin-left:20px; margin-top:25px;" />
        </div>

        <div class="col-md-8">
            <br/>
            <h2 style="margin-left:5px;margin-top:7px;">Name : @ViewBag.name1 @ViewBag.name2 </h2>
            <hr>
            
            <h4>Date & Time Of Membership :@ViewBag.memberdt</h4>
            <h4>Expire Date & Time Of Membership :@ViewBag.expdt</h4>

            <h4>Contact: @ViewBag.contact  </h4>
            <h4>Email: @ViewBag.email</h4>
            <h4>Address: Surat</h4>
            @*<button type="submit" class="btn btn-info" style="font-weight:500;"><i class="fa fa-lock" style="margin-left:7px;" name="submit" value=""></i> Change Profile </button>*@
            <a href="@Url.Action("editprofile","Dashboard")" class="btn waves-effect waves-light btn-success  text-uppercase ">Update Profile</a>
            
            <a href="@Url.Action("Changepassword","Dashboard")" class="btn waves-effect waves-light btn-danger  text-uppercase ">Change Password</a>
            <a href="@Url.Action("result","Dashboard")" class="btn waves-effect waves-light btn-primary  text-uppercase ">Result</a>
        </div>
    </div>
}
<div class="row">

</div>

